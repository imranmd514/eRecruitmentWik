@model Models.ManagementBO
    @{
        ViewBag.Title = "Index";
    }
    <div class="wrapper">
    <div class="container-fluid">

        <!-- Page title box -->
        <div class="page-title-alt-bg"></div>
        <div class="page-title-box">
            <ol class="breadcrumb float-right">
                <li class="breadcrumb-item"><a href="javascript:void(0);">My Pages</a></li>
                <li class="breadcrumb-item active">Management View</li>

            </ol>
            <h4 class="page-title"><i class="mdi mdi-account" style="color:black;"></i>Management View</h4>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <div class="top-right" style="margin-left:900px;">
                    <button type="button" class="btn btn-success btn-rounded w-md">Approve</button>
                    <button type="button" class="btn btn-danger btn-rounded w-md">Reject</button>
                    <button type="button" class="btn btn-secondary btn-rounded w-md">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <ul class="nav nav-pills navtab-bg nav-justified">
        <li class="nav-item">
            <a href="#All Requisitions" data-toggle="tab" aria-expanded="false" class="nav-link active">
                All Requisitions
            </a>
        </li>
        <li class="nav-item">
            <a href="#Pending" data-toggle="tab" aria-expanded="true" class="nav-link ">
                Pending
            </a>
        </li>
        <li class="nav-item">
            <a href="#Approved" data-toggle="tab" aria-expanded="false" class="nav-link">
                Approved
            </a>
        </li>
    </ul>
    <div class="col-lg-12">
        <div class="card-box">
            <div class="tab-content">
                <div class="row">

                </div>
                <div class="tab-pane active" id="Add">
                    <div class="row">
                        <div class="form-group row">
                            <div class="top-left" style="margin-left:20px;">
                                <div class="col-sm-10">
                                    <button type="button" class="btn btn-success btn-rounded w-md">Add</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            S.No<br>
                                        </th>
                                        <th class="text-center">
                                            Job Title<br>
                                        </th>
                                        <th class="text-center">
                                            Description<br>
                                        </th>
                                        <th class="text-center">
                                            Qualification<br>
                                        </th>
                                        <th class="text-center">
                                            Current Salary<br>
                                        </th>
                                        <th class="text-center">
                                            Expected Salary<br>
                                        </th>
                                        <th class="text-center">
                                            Experience<br>
                                        </th>
                                        <th class="text-center">
                                            Skills<br>
                                        </th>
                                        <th class="text-center">
                                            Action<br>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div><!-- end row -->
                </div>
              </div>  
            </div><!-- end card-box -->
          </div>
</div>

