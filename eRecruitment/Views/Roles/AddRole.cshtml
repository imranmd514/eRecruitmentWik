@model Models.RolesBO

    <div class="col-lg-12">
        <div class="card-box col-lg-12">
                <div class="panel-heading">
                    <h3 class="panel-title">&nbsp; <span class="menu-icon"> <i class="fa fa-book"></i></span> Role Entry </h3>
                    <br />
                    <div class="panel-body">
                        <form class="form-horizontal" action="#" role="form">
                            <div class="form-group">
                                @Html.HiddenFor(m => m.RoleId)
                                <div class="row mgbt-sm-0">
                                    &nbsp;&nbsp;&nbsp;
                                    <label class="col-sm-4">Role Name<span class="text-danger">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(model => model.RoleName, new { @placeholder = "Role Name", @class = "form-control", id = "RoleName", @maxLength = "50" })
                                    </div>
                                </div><br />
                                <div class="row mgbt-sm-0">
                                    &nbsp;&nbsp;&nbsp;
                                    <label class="col-sm-4">Description</label>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(model => model.Description, new { @placeholder = "Description", @class = "form-control", id = "Description", @maxLength = "50" })
                                    </div>
                                </div><br />
                                <div class="row mgbt-sm-0">
                                    &nbsp;&nbsp;&nbsp;
                                    <label class="col-sm-4">IsActive</label>
                                    <div class="col-sm-6" id="IsActive">
                                        @Html.CheckBoxFor(model => model.IsActive)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-actions">
                                <div class="col-lg-12">
                                    <button type="button" class="btn btn-success btn-rounded w-sm" onclick="OnSubmitRole();">Submit</button>
                                    <button type="button" class="btn btn-secondary btn-rounded w-sm" onclick="Cancel();">Cancel</button>
                                    <button type="button" class="btn btn-primary btn-rounded w-sm" onclick="Clear();">Clear</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
          </div>
    </div>

