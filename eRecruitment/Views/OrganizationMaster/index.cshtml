    //}

    //function fail() {
    //    notification("Heads up!", "Submission Failed.", 'top-right', '#da8609', 'error!');
    //}


    function Clear() {
        $("#OrganisationName").val("");
        $("#Details").val("");
        $("#IsActive").val("");
    }

    function Cancel() {
        var url = '@Url.Action("Index", "OrganizationMaster")';
        window.location.href = url;
    }


    @*function GoMenu() {
        var url = '@Url.Action("Index", "OrganizationMaster")';
        window.location.href = url;
    }*@



</script>


