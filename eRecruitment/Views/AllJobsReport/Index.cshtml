@model Models.JobsReportBO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper">
    <div class="container-fluid">
        <!-- Page title box -->
        <div class="page-title-alt-bg"></div>
        <div class="page-title-box">
            <ol class="breadcrumb float-right">
                <li class="breadcrumb-item"><a href="javascript:void(0);">Reports</a></li>
                <li class="breadcrumb-item active">All Jobs</li>
            </ol>
            <h4 class="page-title"><i class="mdi mdi-account-multiple" style="color:black"></i>All Jobs Report</h4>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card-box">
            <div class="form-group row">
                <div style="width:99%;" align="right">
                    <div class="table-responsive">
                        <div class="table table-bordered table-striped" id="AllJobsReportList">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        LoadAllJobsReportGrid();

    });

    function LoadAllJobsReportGrid() {
        ShowLoader();
        $.ajax({
            type: "GET",
            url: '../AllJobsReport/GetAllJobsReportList',
            data: {
            },
            success: function (data) {
                $("#AllJobsReportList").html(data);
                $('#AllJobsReportGridList').DataTable();
                setTimeout(function () {
                    HideLoader();
                }, 500);
            }
        });
    }
</script>
