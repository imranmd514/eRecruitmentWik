@model IEnumerable<Models.JobsReportBO>

<table class="table" id="AllJobsReportGridList">
    <thead>
        <tr class="TableHeader" style="background-color:darkgrey">
            <th style="text-align:center">
                #
            </th>
            <th style="text-align:center">
                Job Name
            </th>
            <th style="text-align:center">
                Job Description
            </th>
            <th style="text-align:center">
                No Of Postions
            </th>
            <th style="text-align:center">
                Job Location
            </th>
            <th style="text-align:center">
                Donor Program
            </th>
            <th style="text-align:center">
                RequiredStaffLevel
            </th>
            <th style="text-align:center">
                CurrentStaffLevel
            </th>
            <th style="text-align:center">
                Gaps
            </th>
            <th style="text-align:center">
                Status
            </th>
        </tr>
    </thead>
    <tbody style="background-color: white" id="tbody">
        @{
            var count = 1;
        }
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td style='width:20px;vertical-align:middle;'>
                    <span class='label label-info'>
                        @(count++)
                    </span>
                </td>
                <td style="text-align:center">@item.JobName</td>
                <td style="text-align:center">@item.JobDescription</td>
                <td style="text-align:center">@item.NoOfPositions</td>
                <td style="text-align:center">@item.JobLocation</td>
                <td style="text-align:center">@item.DonorProgramName</td>
                <td style="text-align:center">@item.RequiredStaffLevel</td>
                <td style="text-align:center">@item.CurrentStaffLevel</td>
                <td style="text-align:center">@item.Gaps</td>
                <td style="text-align:center">@item.Status</td>
            </tr>
        }
    </tbody>

</table>


