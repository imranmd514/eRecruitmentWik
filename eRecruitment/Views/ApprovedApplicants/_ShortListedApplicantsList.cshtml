@model IEnumerable<Models.ApprovedApplicantsBO>

<table class="table" id="ApprovedApplicantsGrid">
    <thead>
        <tr class="TableHeader">
            <th style="width:50px;vertical-align:middle;padding-left:20px">
                #
            </th>
            <th style="vertical-align:middle;padding-left:20px">
                Applicant Name
            </th>
            <th style="vertical-align:middle;padding-left:20px">
                Mobile Number
            </th>
            <th style="vertical-align:middle;padding-left:20px">
                Email Address
            </th>
            <th style="vertical-align:middle;padding-left:20px">
                Address
            </th>
            <th style="vertical-align:middle;padding-left:20px">
                Status
            </th>
            <th style="vertical-align:middle;padding-left:20px">
                ShortListed By
            </th>
            <th style="vertical-align:middle;padding-left:20px">
                ShortListed Date
            </th>
            <th style="vertical-align:middle;padding-left:20px">
                Comments
            </th>
            <th style="width:50px;" vertical-align:middle;padding-left:20px">
                Action
            </th>
        </tr>
    </thead>
    <tbody style="background-color: white" id="tbodyUser">
        @{
            var count = 1;
        }
        @foreach (var item in Model)
        {
            <tr style='height:50px;' id='@item.ApplicantId'>
                <td style='width:20px;vertical-align:middle;'>
                    <span class='label label-info'>
                        @(count++)
                    </span>
                </td>
                <td style="cursor:pointer" onclick="ViewApprovedApplicant(@item.ApplicantId);">@item.FullName</td>
                <td>@item.MobileNumber</td>
                <td>@item.EmailAddress</td>
                <td>@item.Address</td>
                <td>@item.SelectedBy</td>
                <td>@item.SelectedDate</td>
                <td>@item.Comments</td>
                <td style='width:200px;vertical-align:middle;' class='menu-action'>
                    <a href='#custom-modal' data-animation='corner' data-plugin='custommodal'><i class="mdi mdi-eye" onclick='ViewApprovedApplicant(@item.ApplicantId);'></i> </a>
                    <a href='#custom-modal'  data-plugin='custommodal'><i class="mdi mdi-pencil" onclick='EditShortListed(@item.ApplicantId);'></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>





