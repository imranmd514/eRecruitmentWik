    function GetApprovedApplicants() {
        debugger;
        ShowLoader();
        var JobId = $("#JobName").val();
        $.ajax({
            type: "GET",
            url: '../ApprovedApplicants/getApprovedApplicantsList',
            data: {
                A_iJobId: JobId,
            },
            success: function (data) {
                $("#ApprovedApplicantsList").html(data);
                $('#ApprovedApplicantsGrid').DataTable();
                setTimeout(function () {
                    HideLoader();
                }, 500);
            }
        });
    }

