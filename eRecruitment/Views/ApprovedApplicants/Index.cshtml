@model Models.ApprovedApplicantsBO


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .modal-header {
        padding: 12px 12px;
        background-color: #5b6886;
    }

        .modal-header .close {
            margin-top: 2px;
        }

        .modal-header h3 {
            margin: 0;
            line-height: 20px;
        }
           .modal-dialog {
   max-width:80%;
     }
