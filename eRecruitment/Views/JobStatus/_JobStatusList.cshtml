@model IEnumerable<Models.JobStatusBO>


<style>
    .table {
        width: 95%;
        height: 120px;
        margin-left: 30px;
        text-align: center;
    }
</style>


<table class="table" id="ApplyJobStatusGrid" align="center">
    <thead>
        <tr class="TableHeader" style="background-color:darkgrey">
            <th style="text-align:center">
                #
            </th>
            <th style="text-align:center">
                Job Name
            </th>
            <th style="text-align:center">
                Job Description
            </th>
            <th style="text-align:center">
                Job Location
            </th>
            <th style="text-align:center">
                No Of Positions
            </th>

            <th style="text-align:center">
                Status
            </th>
            <th style="text-align:center">
                Action
            </th>
        </tr>
    </thead>

    <tbody style="background-color: white" id="JobPosting">
        @{
            var count = 1;
        }
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr style="text-align:center" id='@item.JobPostingId'>
                    <td style='width:100px;vertical-align:middle;'>
                        <span class='label label-warning'>
                            @(count++)
                        </span>
                    </td>
                    <td style="text-align:center" cursor:pointer" onclick="ViewApplyJob(@item.JobPostingId);">@item.JobName</td>
                    <td style="text-align:center">@item.JobDescription</td>
                    <td style="text-align:center">@item.JobLocation</td>
                    <td style="text-align:center">@item.NoOfPositions</td>
                    <td style="text-align:center">@item.Status</td>
                    <td style='width:110px;text-align:center;' class='menu-action'>
                        <a href='#custom-modal' data-animation='corner' data-toggle="modal" data-target="#myModal"><i class="mdi mdi-eye" onclick='ViewApplyJob(@item.JobPostingId);'></i> </a>&nbsp;&nbsp;
                    </td>
                </tr>
            }
        }

    </tbody>
</table>